<Window x:Class="Series_Tracker.Views.ViewAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Series_Tracker.ViewModels"
        mc:Ignorable="d"
        Title="About Series Tracker..."
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="pack://Application:,,,/Assets/img/TV256.ico"
        
        >
    <Window.DataContext>
        <local:AboutViewModel/>
    </Window.DataContext>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0"
               Source="{Binding ImageIcon}"
               MaxWidth="80"
               MaxHeight="80"/>
        
        <StackPanel Grid.Column="1">
            
            <TextBlock Text="{Binding ApplicationName}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Version}" FontSize="14" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding Author}" FontSize="14" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock Text="{Binding Description}" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            <TextBlock TextAlignment="Center" Text="{Binding Description2}" FontSize="12" TextWrapping="Wrap"   HorizontalAlignment="Center" Margin="0,10"/>

            <DockPanel>
                    <TextBlock VerticalAlignment="Center" >
                        <Hyperlink NavigateUri="{Binding GitHubLink}"
                           RequestNavigate="Hyperlink_RequestNavigate">
                            Source code on GitHub
                        </Hyperlink>
                    </TextBlock>

                <Button Content="OK" 
                    Width="90" 
                    Height="25"
                    HorizontalAlignment="Right"
                    IsCancel="True"
                    IsDefault="False"
                    Click="OnOkClicked"/>
            </DockPanel>

        </StackPanel>
    </Grid>

</Window>
